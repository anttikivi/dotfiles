#!/usr/bin/env bash

set -e

source ./scripts/colors.sh

if [ "${DOTFILES_UPDATE}" = 1 ]; then
  echo "Updates are set to true"
fi

CONFIG="install.conf.yaml"
DOTBOT_DIR="dotbot"

DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
git -C "${DOTBOT_DIR}" submodule sync --quiet --recursive
git submodule update --init --recursive "${DOTBOT_DIR}"

"${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" -c "${CONFIG}" "${@}"

printf "\n"

echo -e "${DOTFILES_ESC_BLUE}Starting the kitty tasks${DOTFILES_ESC_RESET}"

"${BASEDIR}/scripts/install_kitty.sh"

echo -e "${DOTFILES_ESC_GREEN}==> Kitty tasks run${DOTFILES_ESC_RESET}"
