<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>fi.anttikivi.colorscheme</string>
    <key>ProgramArguments</key>
    <array>
      <string>{HOME}/.local/bin/watch_color_scheme</string>
    </array>
    <key>RunAtLoad</key>
    <true />
    <key>KeepAlive</key>
    <dict>
      <key>SuccessfulExit</key>
      <false/>
    </dict>
    <key>StandardErrorPath</key>
    <string>{HOME}/.local/var/log/color_scheme.err</string>
    <key>StandardOutPath</key>
    <string>{HOME}/.local/var/log/color_scheme.log</string>
  </dict>
</plist>
